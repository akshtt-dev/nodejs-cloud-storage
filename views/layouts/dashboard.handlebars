                <a href="/dashboard/upload"><div class="px-2 py-1 bg-slate-700 rounded-md h-8"><h1 class="text-slate-200 font-semibold text-md">Upload</h1></div></a>
                <a href="/dashboard/gallery"><div class="px-2 py-1 bg-slate-700 rounded-md h-8"><h1 class="text-slate-200 font-semibold text-md">Gallery</h1></div></a>
            </div>
        </section>
        <section class="bg-gradient-to-br from-slate-700 to-slate-900 w-full md-5/6 h-full">
            {{{body}}}
        </section>
    </main>
